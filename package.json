{
  "name": "pagic-docs",
  "version": "0.0.1",
  "description": "theme for pagic based on docs",
  "main": "mod.ts",
  "scripts": {
    "test": "deno test --unstable --allow-read --allow-write --allow-net --allow-run",
    "lint": "run-s eslint prettier",
    "eslint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "eslint:fix": "eslint --ext .ts,.tsx,.js,.jsx --fix .",
    "prettier": "prettier -l \"./**/*\"",
    "prettier:fix": "prettier --write -l \"./**/*\"",
    "update": "yarn add --dev @typescript-eslint/eslint-plugin@latest @typescript-eslint/parser@latest eslint@latest eslint-config-alloy@latest eslint-plugin-react@latest prettier@latest typescript@latest"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-alloy": "^3.10.0",
    "eslint-plugin-react": "^7.22.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5"
  }
}
